<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.pierreherbelin.drivy.app.customview.CarHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_car_header_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:text="@string/owner_section"/>

    <com.pierreherbelin.drivy.app.customview.OwnerHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/owner_header_view"/>

</LinearLayout>